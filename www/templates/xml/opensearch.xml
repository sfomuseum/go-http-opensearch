{{ define "opensearch" }}
<?xml version="1.0" encoding="UTF-8"?>
<OpenSearchDescription xmlns="http://a9.com/-/spec/opensearch/1.1/" xmlns:moz="http://www.mozilla.org/2006/browser/search/">
	<InputEncoding>UTF-8</InputEncoding>
	<ShortName>{{ .ShortName }}</ShortName>
	<Description>{{ .Description }}</Description>
	<Image height="{{ .Image.Height }}" width="{{ .Image.Width }}" type="image/x-icon">data:image/x-icon;base64,{{ .Image.URI }}</Image>
	<Url type="{{ .URL.Type }}" method="{{ .URL.Method }}" template="{{ .URL.Template }}">
	{{ range .URK.Parameters }}	  
	<Param name="{{ .Name }}" value="{searchTerms}"/>
	{{ end }}
	</Url>
	<moz:SearchForm>{{ .SearchForm }}</moz:SearchForm>
</OpenSearchDescription>
{{ end }}